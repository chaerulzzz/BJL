<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/katakana_parent_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.KatakanaActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@android:color/white">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@id/katakana_image_1"
            android:layout_marginTop="10dp"
            android:layout_width="370dp"
            android:layout_height="500dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/katakana1" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@id/katakana_image_2"
            android:layout_marginTop="10dp"
            android:layout_width="370dp"
            android:layout_height="500dp"
            android:layout_below="@id/katakana_image_1"
            android:layout_centerHorizontal="true"
            android:src="@drawable/katakana2" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@id/katakana_image_3"
            android:layout_marginTop="10dp"
            android:layout_width="370dp"
            android:layout_height="500dp"
            android:layout_below="@id/katakana_image_2"
            android:layout_centerHorizontal="true"
            android:src="@drawable/katakana3" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@id/katakana_image_4"
            android:layout_marginTop="10dp"
            android:layout_width="370dp"
            android:layout_height="500dp"
            android:layout_below="@id/katakana_image_3"
            android:layout_centerHorizontal="true"
            android:src="@drawable/katakana4" />
    </RelativeLayout>
</ScrollView>