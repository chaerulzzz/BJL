<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="5dp">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@id/hiragana_image_1"
            android:layout_width="370dp"
            android:layout_height="500dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/hiragana1" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@id/hiragana_image_2"
            android:layout_width="370dp"
            android:layout_height="500dp"
            android:layout_below="@id/hiragana_image_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/hiragana2" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@id/hiragana_image_3"
            android:layout_width="370dp"
            android:layout_height="500dp"
            android:layout_below="@id/hiragana_image_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/hiragana3" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@id/hiragana_image_4"
            android:layout_width="370dp"
            android:layout_height="500dp"
            android:layout_below="@id/hiragana_image_3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/hiragana4" />
    </RelativeLayout>
</ScrollView>